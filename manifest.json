{
  "name": "xKey : Create shortcut keys for any website",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Make browsing more productive - Discover shortcuts and crete pre-defined shortcuts",
  "homepage_url": "http://github.com/startupjockey/xKey",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "options_page": "src/options_custom/index.html",
  "permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*", "https://*/*"
      ],
      "js": [
        "js/jquery/jquery.js",
        "js/jquery.hotkeys.js",
        "src/inject/inject.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "background" : {
    "persistent": false,
    "scripts": ["src/background/background.js"]
  },
  "browser_action": {
      "default_title": "xKey - Shortcut keys",
      "default_icon": {
          "19": "icons/icon19.png",
          "48": "icons/icon48.png"
      },
      "default_popup": "src/popup/popup.html"
  }
}